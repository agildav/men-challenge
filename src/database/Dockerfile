FROM mongo:4.2.5-bionic

ARG ROOT_USERNAME="root"
ARG ROOT_PASSWORD="password"
ARG INITIAL_DATABASE="admin"

ENV MONGO_INITDB_ROOT_USERNAME ${ROOT_USERNAME}}
ENV MONGO_INITDB_ROOT_PASSWORD ${ROOT_PASSWORD}
ENV MONGO_INITDB_DATABASE ${INITIAL_DATABASE}

COPY entrypoint.js /docker-entrypoint-initdb.d/

EXPOSE 27017
